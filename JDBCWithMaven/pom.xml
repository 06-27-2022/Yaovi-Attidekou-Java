<!-- The pom.xml is written in XML(which is used to build configuration files.
 I have to remember that POM stands for "Project Object Model"
 -->

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.revature</groupId>
  <artifactId>JDBCWithMaven</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <!-- I want change the java version because Maven is currently assuming that I am 
  working in j=Java 5. To do that I will use properties tag -->
  <properties>
  <maven.compiler.source>1.8</maven.compiler.source>
  <maven.compiler.target>1.8</maven.compiler.target>
  </properties>
  <!-- I have to copy the dependency information from the Maven repository into
  my pom(inside of the dependencies tag of source -->
  <dependencies>
  <!-- https://mvnrepository.com/artifact/org.postgresql/postgresql -->
<dependency>
    <groupId>org.postgresql</groupId>
    <artifactId>postgresql</artifactId>
    <version>42.4.0</version>
</dependency>
  
  </dependencies>
</project>